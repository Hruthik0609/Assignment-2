def coinChange(coins, amount):
    if amount == 0:
        return 0
    if amount < 0:
        return float('inf')

    return min(coinChange(coins, amount - coin) + 1 for coin in coins if amount >= coin)

# Example usage
coins = [1, 2, 5]
amount = 24
result = coinChange(coins, amount)
print(result if result != float('inf') else -1)  # Output: 3 (5+5+1)
